
@model LocHelp.Models.PrestationDeService
@{
    Layout = "~/Views/Shared/_LayoutLocHelp.cshtml";
}
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Sejours</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                @using (Html.BeginForm("ModifierPrestation", "PrestationDeService", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                   <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.TypeDeService, new { @class = "form-control", placeholder = "Type" })
                            @Html.LabelFor(model => model.TypeDeService)
                            @Html.ValidationMessageFor(model => model.TypeDeService)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.DateDeDebut, new { @class = "form-control", placeholder = "Date de début" })
                            @Html.LabelFor(model => model.DateDeDebut)
                            @Html.ValidationMessageFor(model => model.DateDeDebut)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.DateDeFin, new { @class = "form-control", placeholder = "Date de fin" })
                            @Html.LabelFor(model => model.DateDeFin)
                            @Html.ValidationMessageFor(model => model.DateDeFin)
                        </div>

                         <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.Tarif, new { @class = "form-control", placeholder = "Tarif" })
                            @Html.LabelFor(model => model.Tarif)
                            @Html.ValidationMessageFor(model => model.Tarif)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                            @Html.LabelFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>

                    
                    @Html.HiddenFor(model=>model.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                @Html.LabelFor(model => model.Image, new { id = "imageLabel", @style = "text-align:center;" })
                                @Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" })

                            </div>
                        </div>
                        <div class="text-center">
                            <img src="@Model.ImagePath" height="400" width="400" />
                        </div>
                    </div>



                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl" type="submit">Modifier</button>
                }
            </div>
        </div>

