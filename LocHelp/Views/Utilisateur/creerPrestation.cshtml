@model LocHelp.Models.Utilisateur
@{
    Layout = "~/Views/Shared/_LayoutLocHelp.cshtml";
}

            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Creer une prestation</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    @using (Html.BeginForm())
                    {
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.PrestationDeService.TypeDeService, new { @class = "form-control", placeholder = "Type" })
                            @Html.LabelFor(model => model.PrestationDeService.TypeDeService)
                            @Html.ValidationMessageFor(model => model.PrestationDeService.TypeDeService)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.PrestationDeService.DateDeDebut, new { @class = "form-control", placeholder = "Date de début" })
                            @Html.LabelFor(model => model.PrestationDeService.DateDeDebut)
                            @Html.ValidationMessageFor(model => model.PrestationDeService.DateDeDebut)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.PrestationDeService.DateDeFin, new { @class = "form-control", placeholder = "Date de fin" })
                            @Html.LabelFor(model => model.PrestationDeService.DateDeFin)
                            @Html.ValidationMessageFor(model => model.PrestationDeService.DateDeFin)
                        </div>

                         <div class="form-floating mb-3">
                            @Html.TextBoxFor(model => model.PrestationDeService.Tarif, new { @class = "form-control", placeholder = "Tarif" })
                            @Html.LabelFor(model => model.PrestationDeService.Tarif)
                            @Html.ValidationMessageFor(model => model.PrestationDeService.Tarif)
                        </div>

                        <div class="form-floating mb-3">
                            @Html.TextAreaFor(model => model.PrestationDeService.Description, new { @class = "form-control", placeholder = "Description" })
                            @Html.LabelFor(model => model.PrestationDeService.Description)
                            @Html.ValidationMessageFor(model => model.PrestationDeService.Description)
                        </div>

                        <!-- Submit Button-->
                        <button class="btn btn-primary btn-xl" type="submit">Ajouter</button>
                    }
                </div>
            </div>
        
